// add a node to the first of the linked list
// To be performed in four steps 

void addfirst(Node** head, int data)
{
   
    // 1. allocate node
    Node* new_node = new Node();
 
    // 2. put in the data
    new_node->data = data;
 
    // 3. Make next of new node as head
    new_node->next = (*head);
 
    // 4. Move the head to point to
    // the new node
    (*head) = new_node;
}
